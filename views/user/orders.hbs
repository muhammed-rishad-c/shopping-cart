<table class="table table-dark mt-5" style="background-color: #2c3e50; border-radius: 10px;">
  <thead>
    <tr>
      <th scope="col" style="color: #ecf0f1;">Date</th>
      <th scope="col" style="color: #ecf0f1;">Address</th>
      <th scope="col" style="color: #ecf0f1;">Pincode</th>
      <th scope="col" style="color: #ecf0f1;">Mobile</th>
      <th scope="col" style="color: #ecf0f1;">Amount</th>
      <th scope="col" style="color: #ecf0f1;">Payment</th>
      <th scope="col" style="color: #ecf0f1;">Status</th>
      <th scope="col" style="color: #ecf0f1;">View Product</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td style="color: #ecf0f1;">{{this.date}}</td>
      <td style="color: #ecf0f1;">{{this.deliveryDetails.address}}</td>
      <td style="color: #ecf0f1;">{{this.deliveryDetails.pincode}}</td>
      <td style="color: #ecf0f1;">{{this.deliveryDetails.mobile}}</td>
      <td style="color: #ecf0f1;">{{this.totalAmount}}</td>
      <td style="color: #ecf0f1;">{{this.paymentMethod}}</td>
      <td style="color: #ecf0f1;">{{this.status}}</td>
      <td><a href="/view-order-product/{{this._id}}" class="btn btn-primary" style="background-color: #e74c3c; border: none;">View Product</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

<style>
  .table-dark {
    background-color: #2c3e50;
    border-radius: 10px;
  }
  .table-dark th, .table-dark td {
    color: #ecf0f1;
  }
  .btn-primary {
    background-color: #e74c3c;
    border: none;
    color: #ecf0f1;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }
  .btn-primary:hover {
    background-color: #c0392b;
    transform: scale(1.05);
  }
  .btn-primary:active {
    background-color: #a93226;
    transform: scale(1.1);
  }
</style>
