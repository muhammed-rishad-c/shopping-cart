<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5" style="background-color: #2c3e50; padding: 2rem; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);">
            <h2 class="text-center" style="color: #ecf0f1;">Create New Account</h2>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label style="color: #ecf0f1;">Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter Name" style="background-color: #34495e; color: #ecf0f1; border: none;">
                </div>
                <div class="form-group">
                    <label style="color: #ecf0f1;">Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" style="background-color: #34495e; color: #ecf0f1; border: none;">
                </div>
                <div class="form-group">
                    <label style="color: #ecf0f1;">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password" style="background-color: #34495e; color: #ecf0f1; border: none;">
                </div>
                <a href="/login" style="color: #3498db;">Already have an account?</a>
                <button type="submit" class="btn btn-primary float-right" style="background-color: greyf; border: none;">Signup</button>
            </form>
        </div>
    </div>
</div>
